

<article class="speakerslist" >
  <div class="container">
    <div class="row">
        <% sravs.forEach(function(item) { %>
        <div class="<% if( pageId =='lakshya'){%> col-sm-3 text-center <%} else{ %> col-sm-8 <% } %>">
          <h3 class="speakerslist-title wow zoomInUp" data-wow-duration="2s" data-wow-delay="1s"><%= item.title %></h3>
          <h5 class="speakerslist-name">for <a href="/services/<%= item.shortname %>"><%= item.name %></a></h5>
          <p class="speakerslist-info">
            <a href="/services/<%= item.shortname %>">
            
            <% if( pageId  =='lakshya'){%>
              <img class="speakerslist-img wow rollIn" data-wow-duration="2s" data-wow-delay="1s" width="100%" src="/images/services/<%= item.shortname %>_tn.jpg" alt="Photo of <%= item.name %>"></a>
            <%} %>

            
            <% if( pageId  =='speakerList'){%>
              <img class="speakerslist-img pull-left wow slideInDown" data-wow-duration="2s" src="/images/services/<%= item.shortname %>_tn.jpg" alt="Photo of <%= item.name %>">
            <%} %>

            <% if( pageId  =='speakerDetails'){%>
              <img class="speakerslist-img img-responsive pull-left wow fadeInDown" width="100%" src="/images/services/<%= item.shortname %>.jpg" alt="Photo of <%= item.name %>">
            <%} %>
           </a>
            <div>
            <% if( pageId !== 'lakshya'){ %>
               <% if( pageId == 'speakerList'){ %>
                  <%= item.summary %>
               <% } else { %>
                  <%- item.description %>
               <% } %>
            <% } %>
            </div>
          </p>
        </div>
        <%  }); %>
    </div><!-- row -->
  </div><!-- container -->
</article>